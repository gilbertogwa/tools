{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist/electron",
    "rootDir": "./electron",
    "lib": ["ES2020"]
  },
  "include": ["electron/**/*"],
  "exclude": ["node_modules"]
}
